# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/creohub
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=creohub

# Development Environment
NODE_ENV=development

# Session Secret
SESSION_SECRET=your-secret-key-here

# Pesapal Payment Integration
# Get these credentials from: https://cybqa.pesapal.com/pesapalv3 (sandbox) or https://www.pesapal.com/merchant (live)
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key_here
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret_here
PESAPAL_ENVIRONMENT=sandbox
PESAPAL_IPN_URL=http://localhost:5000/api/payments/customer/pesapal/ipn
PESAPAL_CALLBACK_URL=http://localhost:5000/api/payments/customer/pesapal/callback

# Optional: Other Payment Methods
# MPESA_CONSUMER_KEY=your_mpesa_consumer_key
# MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
# MPESA_BUSINESS_SHORT_CODE=174379
# MPESA_PASSKEY=your_mpesa_passkey
# MPESA_CALLBACK_URL=http://localhost:5000/api/payments/customer/mpesa/callback

# Stripe (Optional)
# STRIPE_SECRET_KEY=sk_test_...
# VITE_STRIPE_PUBLIC_KEY=pk_test_...

# PayPal (Optional)
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret